{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.github.com/my/repo/",
  "title": "Test",
  "type": "object",
  "properties": {
    "name": {
      "title": "name",
      "type": "string",
      "description": "The name of the test.",
      "$term": "http://schema.org/hello"
    },
    "nested_array": {
      "title": "nested_array",
      "type": "array",
      "$term": "http://schema.org/something",
      "items": {
        "$ref": "#/$defs/Nested"
      }
    },
    "number": {
      "title": "number",
      "type": "number",
      "default": 1.0,
      "$term": "http://schema.org/one"
    },
    "ontology": {
      "title": "ontology",
      "type": "string",
      "$ref": "#/$defs/Ontology"
    },
    "single_object": {
      "title": "single_object",
      "type": "object",
      "$term": "http://schema.org/something",
      "$ref": "#/$defs/Nested"
    },
    "to_reference": {
      "title": "to_reference",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "$defs": {
    "Nested": {
      "title": "Nested",
      "type": "object",
      "properties": {
        "names": {
          "title": "names",
          "type": "array",
          "$term": "http://schema.org/hello",
          "items": {
            "type": "string"
          }
        },
        "number": {
          "title": "number",
          "type": "number",
          "$term": "http://schema.org/one",
          "minimum": 0.0
        },
        "reference": {
          "title": "reference",
          "type": "string",
          "pattern": "^[a-z]+$",
          "references": "Test.to_reference"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "Ontology": {
      "title": "Ontology",
      "type": "string",
      "enum": [
        "https://www.evidenceontology.org/term/",
        "https://amigo.geneontology.org/amigo/term/",
        "http://semanticscience.org/resource/"
      ]
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}